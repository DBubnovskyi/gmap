<UserControl x:Class="MapWPF.Controls.Buttons.ShowHideButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="25" Foreground="{x:Null}">
    <Grid>
        <Button Style="{StaticResource ShowRight}" MouseDown="Button_MouseClick">
            <Grid>
                <ContentControl Content="{StaticResource IconArrowRight}"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
