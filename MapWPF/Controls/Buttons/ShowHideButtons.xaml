<local:ButtonExtention x:Class="MapWPF.Controls.Buttons.ShowHideButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapWPF.Extentions"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="20" Foreground="{x:Null}">
    <Button Style="{StaticResource ShowRightV3}" 
            Click="Button_MouseClick" 
            HorizontalAlignment="Center" 
            Width="15">
        <ContentControl>
            <Grid>
                <ContentControl Visibility="Hidden" x:Name="ArrowRight" Content="{StaticResource IconArrowRight}"/>
                <ContentControl x:Name="ArrowLeft" Content="{StaticResource IconArrowLeft}"/>
            </Grid>
        </ContentControl>
    </Button>
</local:ButtonExtention>
